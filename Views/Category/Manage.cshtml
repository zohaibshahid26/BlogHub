@model IEnumerable<BlogHub.Models.Category>
@{
    ViewData["Title"] = "Categories";
}
@section Styles {
	<link rel="stylesheet" href="~/css/style.css">
}
<div class="container my-5">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
        Add Category
    </button>
    <div class="modal fade" id="addCategoryModal" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCategoryModalLabel">Add Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="Add" asp-controller="Category" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Category Name</label>
                            <input  type="text" class="form-control" id="categoryName" name="CategoryName" placeholder="Category Name" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th> Category ID</th>
                <th>Category Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Category" asp-route-id="@category.CategoryId" method="post">
                            <input type="submit" class="btn" style="background:white; color: #FF474D; border:#FF474D solid 2px;" value="Delete"  onclick="return confirm('Are you sure you want to delete this category?')">
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
