@using System.Security.Claims;
<!DOCTYPE html>
<html>
<head>
    <title>BlogHub - A Platform where you can write.</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"  href="~/css/style.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/icon.ico" />
    @RenderSection("Styles", required: false)
    <script type="module">
        import { marked } from "https://cdn.jsdelivr.net/npm/marked/lib/marked.esm.js";
        const markdownInput = document.getElementById('markdownInput');
        const preview = document.getElementById('preview');
        markdownInput.addEventListener('input', () => {
            preview.innerHTML = marked(markdownInput.value);
            if (preview.clientHeight > markdownInput.clientHeight && preview.clientHeight > 200) {
                markdownInput.style.height = preview.clientHeight + 'px';
            }
        });
    </script>
    <script class="jsbin" src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="logo navbar-brand mx-3" asp-action="Index" asp-controller="Home">BlogHub.</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-action="Index" asp-controller="Post">My Posts</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" href="/Home/Index#trending">Trending Posts</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-action="Profile" asp-controller="User" asp-route-id="@if(User.Identity?.IsAuthenticated ?? false){@User.FindFirstValue(ClaimTypes.NameIdentifier)}">Profile</a>
                        </li>
                        <li class="nav-item mx-3">
                            <a class="nav-link" asp-controller="Post" asp-action="Add">Add Post</a>
                        </li>
                        <li class="nav-item mx-3">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="nav-link" onclick="return confirm('Are you sure you want to logout?')">Logout</button>
                            </form>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <hr>
    <div>
        @RenderBody()
    </div>
    <hr>
    <footer class="card-footer mt-4 py-3 mb-0">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-3">
                    <h5 class="gradient-text">BlogHub.</h5>
                    <p class="text-muted">
                        BlogHub is a platform where millions gather to share ideas,
                        insights, and stories.
                    </p>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a asp-action="Index" asp-controller="Post" class="text-muted">Home</a>
                        </li>
                        <li>
                            <a asp-action="Login" asp-controller="User" class="text-muted">Login</a>
                        </li>
                        <li>
                            <a asp-action="SignUp" asp-controller="User" class="text-muted">SignUp</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <h5>Legal</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">Terms of Use</a></li>
                        <li><a href="#" class="text-muted">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <h5>Connect with Us</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">Facebook</a></li>
                        <li><a href="#" class="text-muted">Instagram</a></li>
                        <li><a href="#" class="text-muted">Twitter</a></li>
                    </ul>
                </div>
                <div class="col-12 mt-4">
                    <p class="text-center fs-5">© 2024 BlogHub. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>