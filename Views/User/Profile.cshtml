@model MyUser

@section Styles {
	<link rel="stylesheet" href="~/css/style.css">
	<link rel="stylesheet" href="~/css/profile.css">
}
<div class="container d-flex justify-content-center align-items-center">
    <div class="card p-4 shadow my-5" style="border-radius: 15px;">
        <div class="card-body text-center">
            <div class="mt-3 mb-4 bg-white">
                <img src="~/@Model.Image?.ImageURL" class="rounded-circle img-fluid" style="width: 100px;" />
            </div>
            <h4 class="my-2">
                @string.Format("{0} {1}", Model.FirstName, Model.LastName)
            </h4>
            <p class="text-muted">
                Member since: April 2024
            </p>
            <img src="~/assests/geo-alt.svg">
            <p class="d-inline">
                Lahore,Pakistan<span class="mx-2">|</span> <a href="#">@Model.Email</a>
            </p>

            <div class="d-flex justify-content-center text-center mt-3">

                <div class="px-3">
                    <p class="text-muted mb-0">Total Posts</p>
                    <p class="mb-2 h5">
                        @ViewData["PostCount"]
                    </p>
                </div>
            </div>
        </div>
        @if (User.Identity?.Name == Model.Email)
        {
            <div class="edit-profile mb-4">
                <a href="/Identity/Account/Manage" class="btn">
                Edit
                Profile
            </a>
            <a href="#" class="btn" data-bs-toggle="modal" data-bs-target="#changeAvatarModal">
                Change
                Avatar
            </a>
        </div>
        }
    </div>
</div>

<div class="modal fade" id="changeAvatarModal" tabindex="-1" aria-labelledby="changeAvatarModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changeAvatarModalLabel">Change Avatar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Profile" method="post">
                    <div class="mb-3">
                        <label for="avatar" class="form-label">Choose a new avatar</label>
                        <input type="file" class="form-control" id="avatar" accept="image/*" required">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>