@model MyUser
@section Styles {
	<link rel="stylesheet" href="~/css/style.css">
	<link rel="stylesheet" href="~/css/profile.css">
}
<div class="container">
    <div class="d-flex justify-content-center">
        <h1 class="text-center">Profile</h1>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card p-4 shadow-lg my-5" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="mt-3 mb-4 bg-white">
                        <img src="~/@Model.Image?.ImageURL" class="rounded-circle" style="width: 100px; border:1px black solid" />
                    </div>
                    <h4 class="my-2">
                        @string.Format("{0} {1}", Model.FirstName, Model.LastName)
                    </h4>
                    <p class="d-inline">
                        Email: <a href="#" class="text-decoration-none">@Model.Email</a>
                    </p>

                    <div class="d-flex justify-content-center text-center mt-3">

                        <div class="px-3">
                            <p class="text-muted mb-0">Total Posts</p>
                            <p class="mb-2 h5">
                                @ViewData["PostCount"]
                            </p>
                        </div>
                    </div>
                </div>
                @if (User.Identity?.Name == Model.Email)
                {
                    <div class="edit-profile mb-4">
                        <a href="/Identity/Account/Manage" class="btn">
                            Edit Profile
                         </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>